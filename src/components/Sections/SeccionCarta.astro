---
import { Image } from 'astro:assets';
import fondoFlores from '@assets/fondos-para-invitaciones-de-bodas-con-flroes-2.png';
import Carta from '@components/Carta.astro';

interface Props {
    id?: string;
}
const { id } = Astro.props;
---
<style>
    /* Definimos la animación de entrada */
    @keyframes slideInFromLeft {
        0% {
            opacity: 0;
            transform: translateX(-100px); /* Empieza 100px a la izquierda */
        }
        100% {
            opacity: 1;
            transform: translateX(0); /* Termina en su lugar original */
        }
    }

    /* Clase utilitaria para aplicar la animación */
    .animate-enter {
        /* Nombre | Duración | Función de tiempo (suavizado) | Fill mode */
        animation: slideInFromLeft 2.2s cubic-bezier(0.32, 1, 0.36, 1) forwards;
    }

    /* Opcional: Un pequeño delay para que primero cargue el fondo y luego entre la carta */
    .delay-300 {
        animation-delay: 0.3s;
        opacity: 0; /* Importante: empezar invisible para respetar el delay */
    }
</style>
<section 
    id={id}
    class="w-full h-screen relative flex items-center justify-center">
    <div class="absolute inset-0 z-0">
        <Image 
            src={fondoFlores} 
            alt="Fondo de flores" 
            class="w-full h-full object-cover brightness-[0.60]" 
        />
    </div>
    <div class="relative z-10 text-center px-4 text-boda-blanco-base drop-shadow-lg flex flex-col justify-center items-center animate-enter delay-300">
        <span class="block text-xl md:text-2xl mb-2 font-secondary-200 tracking-widest uppercase">Nuestra Boda</span>
        <div class="my-6 flex justify-center">
            <Carta /> 
        </div>
    </div>
</section>
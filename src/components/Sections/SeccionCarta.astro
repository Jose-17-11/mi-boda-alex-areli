---
import { Image } from 'astro:assets';
import fondoFlores from '@assets/fondos-para-invitaciones-de-bodas-con-flroes-2.png';
import Carta from '@components/Carta.astro';

interface Props {
    id?: string;
}
const { id } = Astro.props;
---

<style>
    /* 1. Animación para el contenido (Texto y Carta) */
    @keyframes slideInFromLeft {
        0% {
            opacity: 0;
            transform: translateX(-50px); /* Reducido a 50px para ser más sutil */
        }
        100% {
            opacity: 1;
            transform: translateX(0);
        }
    }

    /* 2. Animación suave solo para la IMAGEN de fondo */
    @keyframes fadeInImage {
        0% { opacity: 0; }
        100% { opacity: 1; }
    }

    .animate-enter {
        opacity: 0; /* CLAVE: Empieza invisible para evitar el parpadeo inicial */
        animation: slideInFromLeft 1.5s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
    }

    .animate-bg {
        animation: fadeInImage 1.2s ease-out forwards;
    }

    .delay-300 {
        animation-delay: 0.3s;
    }
</style>

<section 
    id={id}
    class="w-full h-screen relative flex items-center justify-center overflow-hidden bg-boda-azul-base"> <div class="absolute inset-0 z-0">
        <Image 
            src={fondoFlores} 
            alt="Fondo de flores" 
            class="w-full h-full object-cover brightness-[0.60] animate-bg"
            loading="eager"
            fetchpriority="high"
        />
    </div>

    <div class="relative z-10 text-center px-4 text-boda-blanco-base drop-shadow-lg flex flex-col justify-center items-center animate-enter delay-300">
        <span class="block text-xl md:text-2xl mb-2 font-secondary-200 tracking-widest uppercase">
            Nuestra Boda
        </span>
        <div class="my-6 flex justify-center">
            <Carta /> 
        </div>
    </div>
</section>